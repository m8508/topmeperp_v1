
@{
    ViewBag.Title = "申購單查詢 :";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}


<h3 style="height:20px;line-height:10px">@ViewBag.Title</h3>
<div class="jumbotron">
    <form name="prSearch" id="prSearch" action="Search" method="Post" class="form-inline">
        <div class="row">
            <div class="col-md-6 form-group">
                <label for="id">專案編號:</label><input id="id" name="id" type="text" value="@ViewBag.projectid" class="form-control" style="background-color:#cccccc;" readonly="readonly" />
            </div>
            <div class="col-md-6">
                <label for="projectName">專案名稱:</label><input id="projectName" name="projectName" type="text" value="@ViewBag.projectName" class="form-control" style="background-color:#cccccc;width:300px;" readonly="readonly" />
            </div>
        </div>
        <hr style="border-top: 1px solid #8c8b8b;" />

        <div class="row">
            <div class='col-md-6 date form-group'>
                <label for="create_date">申購日期 : </label>
                <input id="create_date" name="create_date" class="form-control" />
            </div>
            <div class='col-md-6 form-group'>
                <label for="prid">申購單編號 :</label>
                <input id="prid" name="prid" type="text" value="" class="form-control" />
            </div>
                <div class="col-md-6 form-group" style="padding-top:5px">
                    <label for="taskname">任務名稱 :</label>
                    <input id="taskname" name="taskname" type="text" value="" class="form-control" />
                </div>
                <div class="col-md-6 form-group" style="padding-top:5px">
                    <input type="checkbox" value="10" id="status" name="status" checked/>申購單(已送審)
                    <input id="Submit1" type="submit" class="btn btn-info" value="查詢" />
                    <input type="button" class="btn btn-success" onclick="javascript:window.location='@Url.Action("Index", "Plan")'" value="回上一頁">
                </div>
            </div>
        <div class="col-md-6">
            <div id="divProcessing">
                <img src="~/Content/ajax-loader.gif">
            </div>
        </div>
    </form>
</div>
<!--申購單列表區域-->
<div class="container-fluid">
    @ViewBag.SearchResult
    @if (null != Model)
    {
        Html.RenderPartial("_PurchaseRequisitionList");
    }

</div>

<script type="text/javascript">
    $(document).ready(function () {
        // Hide the "busy" Gif at load:
        $("#divProcessing").hide();
        // Attach click handler to the submit button:
        $('#Submit1').click(function () {
            $("#divProcessing").show();
        });

        $(function () {
            $('#create_date').datetimepicker({
                format: 'YYYY/MM/DD'
            });
        });
    })
</script>
