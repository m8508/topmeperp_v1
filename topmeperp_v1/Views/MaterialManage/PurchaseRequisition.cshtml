
@{
    ViewBag.Title = "申購單查詢";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

<div class="jumbotron">
    <h3 style="height:20px;line-height:10px">@ViewBag.Title</h3>
    <form name="formSearch" id="formSearch" action="Search" method="Post" class="form-inline">
        <div class="row">
            <div class="col-md-6 form-group" style="padding-top:10px">
                <label for="id">專案編號:</label><input id="id" name="id" type="text" value="@ViewBag.projectid" class="form-control" style="background-color:#cccccc;" readonly="readonly" />
            </div>
            <div class="col-md-6" style="padding-top:10px">
                <label for="projectName">專案名稱:</label><input id="projectName" name="projectName" type="text" value="@ViewBag.projectName" class="form-control" style="background-color:#cccccc;" readonly="readonly" />
            </div>
        </div>
        <hr style="border-top: 1px solid #8c8b8b;" />
        <div class="row">
            <div class='col-md-8 date form-group' style="padding-top:10px">
                <label for="create_date">申購日期: </label>
                    <input id="create_date" name="create_date" class="form-control" />
                <div class="pull-right">
                    <label for="supplier">採購項目</label>@Html.DropDownList("formname", (IEnumerable<SelectListItem>)ViewBag.formname, String.Empty, new { @class = "form-control selectpicker" })
                </div>
                 </div>
            <div class="col-md-4 form-group" style="padding-top:10px">
                <input id="Submit1" type="submit" class="btn btn-info" value="查詢" />
                <input type="button" class="btn btn-success" onclick="history.back()" value="回上一頁">
            </div>
        </div>
        <div class="col-md-6">
            <div id="divProcessing">
                <img src="~/Content/ajax-loader.gif">
            </div>
        </div>
    </form>
</div>
<!--標單項目列表區域-->
<div class="container-fluid">
    @ViewBag.SearchResult
    @if (null != Model)
    {
        Html.RenderPartial("_PlanItemList");
    }

</div>

<script type="text/javascript">
    $(document).ready(function () {
        // Hide the "busy" Gif at load:
        $("#divProcessing").hide();
        // Attach click handler to the submit button:
        $('#Submit1').click(function () {
            $("#divProcessing").show();
        });
    
        $(function () {
            $('#create_date').datetimepicker({
                format: 'YYYY/MM/DD'
            });
        });
    })
</script>
