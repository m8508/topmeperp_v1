@{
    ViewBag.Title = "物料管理-申購作業";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}
<link href="../../Content/bootstrap-treeview.css" rel="stylesheet" type="text/css">
<script type="text/javascript" src="../../Scripts/bootstrap-treeview.js"></script>
<!--條件區域-->

<div class="container">
    <div class="row">
        <div class="row">
            <div class="col-md-4 form-group" style="padding-top:10px">
                <label for="id">專案編號:</label><input id="projectid" name="projectid" type="text" value="@ViewBag.projectid" class="form-control" style="background-color:#cccccc;" readonly="readonly" />
            </div>
            <div class="col-md-4" style="padding-top:10px">
                <label for="projectName">專案名稱:</label><input id="projectName" name="projectName" type="text" value="@ViewBag.projectName" class="form-control" style="background-color:#cccccc;" readonly="readonly" />
            </div>
            <div class="col-md-4" style="padding-top:30px">
                <input type="button" class="btn btn-success" onclick="history.back()" value="回上一頁">
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h2>申購內容查詢</h2>
                <div class="container">
                    <form name="formQueryForm" id="formQueryForm">
                        <div class="row panel-heading">
                            <div class="col-md-12">
                                <input type="hidden" name="projectid" id="projectid" value="@ViewBag.projectid" readonly />
                                <label class="control-label" for="mapno">圖號: </label><input type="text" name="mapno" id="mapno" value="" size="5" />
                                <label class="control-label" for="buildno">區域或棟別: </label><input type="text" name="buildno" id="buildno" value="" size="5" /><br />
                                <label class="control-label" for="primeside">位置(一次側): </label><input type="text" name="primeside" id="primeside" value="" size="5" />
                                <label class="control-label" for="secondside">位置(二次側): </label><input type="text" name="secondside" id="secondside" value="" size="5" /><br />
                                <label class="control-label" for="secondside">設備名稱: </label><input type="text" name="devicename" id="devicename" value="" size="5" />
                                <label class="control-label" for="secondside">編號: </label>
                                <input type="text" name="startid" id="startid" value="" size="5" />~
                                <input type="text" name="endid" id="endid" value="" size="5" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-8">
                                    <label class="control-label" for="mapType">施作項目:</label>
                                    <input type="checkbox" name="mapType" id="mapType" value="MAP_DEVICE" title="設備" />設備
                                    <input type="checkbox" name="mapType" id="mapType" value="MAP_PEP" title="電器管線" />電器管線
                                    <input type="checkbox" name="mapType" id="mapType" value="MAP_LCP" title="弱電管線" />弱電管線
                                    <input type="checkbox" name="mapType" id="mapType" value="TND_MAP_PLU" title="給排水" />給排水
                                    <input type="checkbox" name="mapType" id="mapType" value="MAP_FP" title="消防電" />消防電
                                    <input type="checkbox" name="mapType" id="mapType" value="MAP_FW" title="消防水" />消防水
                                    <button class="btn btn-info" type="button" onclick="getMapItem4Task()">查詢</button>
                                </div>
                                <div class="col-md-4 alert-info">
                                    @Html.Raw(TempData["result"])
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("Application", "MaterialManage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <form id="formMapItem" name="formMapItem">
                        <input type="hidden" id="checkNodeId" name="checkNodeId" value="" />
                        <input type="hidden" id="projectid" name="projectid" value="@ViewBag.projectid" />
                        <div class="container" id="MapItem" style="padding : 30px">
                        </div>
                        <input type="submit" value="申購物料" class="btn btn-default" />
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    //將樹狀資料由Server端產生
    var chkNodeId;
    var defaultData = [@Html.Raw(ViewBag.TreeString)];
    $('#treeview').treeview({
        data: defaultData,
        showIcon: false,
        showCheckbox: true,
        showTags: true,
        onNodeChecked: function (event, node) {
            $('#treeview').treeview('uncheckAll', { silent: true });
            $('#checkable-output').prepend('<p>' + node.text + ' was checked</p>');
            $('#treeview').treeview('checkNode', [node.nodeId, { silent: true }]);
            // chkNodeId = node.href;
            $('#checkNodeId').val(node.href);
            //alert(node.nodeId);
        },
        onNodeUnchecked: function (event, node) {
            $('#checkable-output').prepend('<p>' + node.text + ' was unchecked</p>');
            $('#checkNodeId').val("");
        }
    });

    //讀取圖算資料
    function getMapItem4Task() {
        $.ajax({
            url: "/ProjectPlan/getMapItem4Task",
            data: $("#formQueryForm").serialize(),
            method: "POST",
            dataType: "html",
            success: function (result) {
                $("#MapItem").html(result);
            }
        })
    }

</script>
