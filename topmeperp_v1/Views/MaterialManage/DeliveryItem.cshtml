@model IEnumerable<topmeperp.Models.PurchaseRequisition>
<div class="container">
    <h3 style="padding-top:40px;">已領收明細 : </h3>
    <form id="formDelivery" name="formDelivery" action="RefreshDelivery" method="post">
        <input type="hidden" name="item_allReceipt" id="item_allReceipt" value="@ViewBag.allReceipt">
        <div class="row" style="padding-top:15px;">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>領收編號</th>
                        <th>領收日期</th>
                        <th>提領數量</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
            {
                        <tr>
                            <td>@item.NO</td>
                            <td>@Html.TextBox("delivery_id", item.DELIVERY_ID, new { @class = "form-control", style = "width:90px", @readonly = "readonly" })
                            <td>@item.CREATE_DATE</td>
                            <td>@Html.TextBox("delivery_qty", item.DELIVERY_QTY, new { @class = "form-control", style = "width:110px" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>

<div class="row">
    <div class="" col-md-12">
        <input type="button" value="修改" class="btn btn-warning" id="updateDelivery" />
    </div>
</div>


<script language="javascript" type="text/javascript">

    $("#updateDelivery").click(function () {
        var totalsum = 0;
        var item_allReceipt = $('input[name=item_allReceipt]').val();
        $(function () {
            $('table > tbody > tr').each(function () {
                totalsum += parseInt($.trim($(this).find("#delivery_qty").val())); //抓取每筆記錄領收數量的值
            });
            alert("總領料數量已達" + totalsum + "，而總驗收數量目前為" + parseInt(item_allReceipt));
            if (totalsum > parseInt(item_allReceipt)) {
                alert("總領料量大於總驗收量，請再次確認您的領收數量！");
                return false;
            }
      
        $.ajax({
            url: '@Url.Action("RefreshDelivery", "MaterialManage")',
            data: $('#formDelivery').serialize(),
            type: "POST",
            dataType: 'text',
            success: function (msg) {
                alert(msg);
                window.location.reload()
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(thrownError);
            }
        });
    });
    });
</script>

