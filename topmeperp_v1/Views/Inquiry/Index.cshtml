
@{
    ViewBag.Title = "備標作業-新增詢價單";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}
<!--標單項目搜尋區條件區域-->
<div class="page-header">
    <div class="row">
        <div class="col-md-12 form-group">
            <form name="FormSearchProject" id="FormSearchProject" action="" method="Post">
                <div class="row col-md-12">
                    <label for="projectid" class="col-md-1 text-right">專案編號</label><input class="form-control col-md-3" id="projectid" name="projectid" type="text" value="@ViewBag.projectid" />
                </div>
                <div class="row col-md-12">
                    <label for="textCode1" class="col-md-1 text-right">九宮格</label><input class="form-control col-md-3" id="textCode1" name="textCode1" type="text" />
                    <label for="textCode2" class="col-md-1 text-right">次九宮格</label><input class="form-control col-md-3" id="textCode2" name="textCode2" type="text" />
                </div>
                <div class="row col-md-12">
                    <label for="textSystemMain" class="col-md-1 text-right">主系統</label> <input class="form-control col-md-3" id="textSystemMain" name="textSystemMain" type="text" />
                    <label for="textSystemSub" class="col-md-1 text-right">次系統</label> <input class="form-control col-md-3" id="textSystemSub" name="textSystemSub" type="text" />
                    <input id="Submit1" type="submit" class="btn btn-info col-md-1" value="查詢" />
                    <div id="divProcessing" class="col-md-2">
                        <img src="~/Content/ajax-loader.gif">
                    </div>
                </div>
                <div class="row col-md-6 text-right">

                </div>
            </form>
        </div>
    </div>
</div>

<!--標單項目列表區域-->
<div class="container-fluid">
    @ViewBag.SearchResult
    @if (null != Model)
    {
        Html.RenderPartial("RFQ");
    }

</div>

<script type="text/javascript">
    $(document).ready(function () {
        // Hide the "busy" Gif at load:
        $("#divProcessing").hide();
        // Attach click handler to the submit button:
        $('#Submit1').click(function () {
            $("#divProcessing").show();
        });
    });
</script>







