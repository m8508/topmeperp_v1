@model topmeperp.Models.InquiryFormModel
@{
    ViewBag.Title = "備標作業-比價作業";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}
<!--標單項目搜尋區條件區域-->
<div class="jumbotron">
    <h5>@ViewBag.Title</h5>
    <form name="formSearch" id="formSearch" action="" method="post" class="form-inline">
        <div class="row">
            <div class="col-md-6 form-group">
                <label for="id">專案編號:</label><input id="id" name="id" type="text" value="@ViewBag.id" class="form-control" />
            </div>
            <div class="col-md-6">
                <label for="projectName">專案名稱:</label><input id="projectName" name="projectName" type="text" value="@ViewBag.projectName" class="form-control" />
            </div>
        </div>
        <hr style="border-top: 1px solid #8c8b8b;" />
        <div class="row">
            <div class="col-md-4">
                <label for="typeCode1">九宮格:</label><input id="typeCode1" name="typeCode1" type="text" value="" class="form-control" />
            </div>
            <div class="col-md-4">
                <label for="typeCode2">次九宮格:</label><input id="typeCode2" name="typeCode2" type="text" value="" class="form-control" />
            </div>
        </div>
        <div class="row" style="padding-top:5px">
            <div class="col-md-4">
                <label for="systemMain">主系統:</label>
                @Html.DropDownList("SystemMain", (IEnumerable<SelectListItem>)ViewBag.SystemMain, String.Empty, new { @class = "form-control selectpicker" })
            </div>
            <div class="col-md-4">
                <label for="systemSub">次系統:</label>
                @Html.DropDownList("systemSub", (IEnumerable<SelectListItem>)ViewBag.SystemSub, String.Empty, new { @class = "form-control selectpicker" })
            </div>
            <div class="col-md-4">
                <div id="divProcessing">
                    <img src="~/Content/ajax-loader.gif">
                </div>
                <input id="Submit1" class="btn btn-info" type="button" onclick="getComparisonData()" value="查詢" />
            </div>
        </div>
    </form>
</div>

<div class="container">
            <!--Html.RenderPartial("_InquiryMainPage");-->
</div>
    <script type="text/javascript">
        $(document).ready(function () {
            // Hide the "busy" Gif at load:
            $("#divProcessing").hide();
            // Attach click handler to the submit button:
            $('#login').click(function () {
                $("#divProcessing").show();
            });
        });
        function getComparisonData(){
            alert("Query");
        }
    </script>
