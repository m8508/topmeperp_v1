<div class="container">
    <div class="row">
        <form id="UploadForm"  name="UploadForm" action="FileUpload" method="post" enctype="multipart/form-data">
            <label for="file">廠商報價單匯入:</label>
            <input type="file" name="file" id="file" />
            <input id="btnUploadfile" name="btnUploadfile" type="submit" class="btn-primary" value="匯入檔案" />
        </form>

    </div>

    <div class="row" style="padding-top:5px;">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>項次</th>
                    <th>編號</th>
                    <th>詢價單名稱</th>
                    <th>供應商名稱</th>
                    <th>總價</th>
                    <th>選項連結</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#UploadForm").ajaxForm({
            iframe: true,
            dataType: "text",
            beforeSubmit: function () {
                var fileContent = $.trim($('#file').val());
                if (fileContent.length == 0) {
                    alert('請選擇要上傳的檔案.');
                    return false;
                }
                return true;
            },
            success: function (result) {
                $('#UploadForm').resetForm();
                alert(result);
            },
            error: function (xhr, textStatus, errorThrown) {
                $('#UploadForm').resetForm();
                alert('檔案上傳錯誤.');
            }
        });
    });
</script>