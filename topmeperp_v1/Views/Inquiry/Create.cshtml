@model IEnumerable<topmeperp.Models.TndProjectModels>
@{
    ViewBag.Title = "FormTemplate";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-12"><h2>協成水電工程事業有限公司</h2></div>
        <div class="col-md-12"><h3>採購詢價單</h3></div>
    </div><br />
    <form name="FormSearchProject" id="FormSearchProject" action="" method="Post">
        <div class="row">
            <div class="col-md-4">專案名稱：<input id="projectid" name="projectid" type="text" value="@ViewBag.projectid" /></div>
            <div class="col-md-4">廠商名稱：<input type="text" id='textbox1' name="textbox1" /></div>
        </div>
        <div class="row">
            <div class="col-md-4">採購項目：<input type="text" id='textbox2' name="textbox2" /></div>
            <div class="col-md-4">聯絡人:</div>
        </div>
        <div class="row">
            <div class="col-md-4">承辦人：</div>
            <div class="col-md-4">E-mail：</div>
        </div>
        <div class="row">
            <div class="col-md-4">聯絡電話：</div>
            <div class="col-md-4">報價期限：</div>
        </div>
        <div class="row">
            <div class="col-md-4">承辦人E-mail：</div>
            <div class="col-md-4">詢價單編號：</div>
        </div>
        <div class="row">
            <div class="col-md-4">承辦人傳真：</div>
        </div>
    </form>
</div>
<table class="table">
    <tr>
        <th>
            No.
        </th>
        <th>
            項次
        </th>
        <th>
            項目說明
        </th>
        <th>
            單位
        </th>
        <th>
            數量
        </th>
        <th>
            單價
        </th>
        <th>
            複價
        </th>
        <th>
            備註
        </th>
        <th>
            九宮格
        </th>
        <th>
            次九宮格
        </th>
        <th>
            主系統
        </th>
        <th>
            次系統
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PROJECT_ITEM_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ITEM_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ITEM_DESC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ITEM_UNIT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ITEM_QUANTITY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ITEM_UNIT_PRICE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MAN_PRICE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ITEM_REMARK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TYPE_CODE_1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TYPE_CODE_2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SYSTEM_MAIN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SYSTEM_SUB)
            </td>
        </tr>
    }
</table>

