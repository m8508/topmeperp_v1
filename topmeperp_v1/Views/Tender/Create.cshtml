@using topmeperp.Models
@model TND_PROJECT
@{
    ViewBag.Title = "備標作業-新增專案";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}
<script>
    $(document).ready(function () {
        $("#newTask").click(function () {
            //Ajax sample
            alert("test");
            var URLs = "recive.php";

            $.ajax({
                url: URLs,
                data: $('#sentToBack').serialize(),
                type: "POST",
                dataType: 'text',

                success: function (msg) {
                    alert(msg);
                },

                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                    alert(thrownError);
                }
            });

        });
        $(function () {
            $('#datetimepicker1').datetimepicker({
                viewMode: 'years',
                format: 'YYYY/MM/DD'
            });
        });
        $(function () {
            $('#datetimepicker2').datetimepicker({
                viewMode: 'years',
                format: 'YYYY/MM/DD'
            });
        });
    })
</script>
<div class="container">
    <div class="col-md-12">
        <!-- Reg-Form -->
        @using (Html.BeginForm("Create", "Tender", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "sky-form", role = "form" }))
            {
            <h3>專案</h3>
            <br />
            <fieldset>
                <section>
                    <div class="row">
                        <div class="col-6">
                            <label class="col-4 control-label">專案編號 : </label>
                            <div class="col-8">
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @Html.TextBox("PROJECT_ID")
                                </label>
                            </div>
                        </div>
                    </div>
                </section>

                <section>
                    <div class="row">
                        <div class="col-6">
                            <label class="col-4 control-label">專案名稱 : </label>
                            <div class="col-8">
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @Html.TextBox("PROJECT_NAME")
                                </label>
                            </div>
                        </div>
                    </div>
                </section>

                <section>
                    <div class="row">
                        <div class="col-6">
                            <label class="col-4 control-label">工程名稱 : </label>
                            <div class="col-8">
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @Html.TextBox("ENG_NAME")
                                </label>
                            </div>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <div class="col-6">
                            <label class="col-4 control-label">標案地址 : </label>
                            <div class="col-8">
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @Html.TextBox("LOCATION")
                                </label>
                            </div>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <div class="col-6">
                            <label class="col-4 control-label">業主 : </label>
                            <div class="col-8">
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @Html.TextBox("OWNER_NAME")
                                </label>
                            </div>
                        </div>
                    </div>
                </section>

                <section>
                    <div class="row">
                        <div class="col-6">
                            <label class="col-4 control-label">聯絡人 : </label>
                            <div class="col-8">
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @Html.TextBox("CONTACT_NAME")
                                </label>
                            </div>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <div class="col-6">
                            <label class="col-4 control-label">E-mail : </label>
                            <div class="col-8">
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @Html.TextBox("CONTACT_EMAIL")
                                </label>
                            </div>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <div class="col-6">
                            <label class="col-4 control-label">電話 : </label>
                            <div class="col-8">
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @Html.TextBox("CONTACT_TEL")
                                </label>
                            </div>
                        </div>
                    </div>
                </section>

                <section>
                    <div class="row">
                        <div class="col-6">
                            <label class="col-4 control-label">傳真 : </label>
                            <div class="col-8">
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @Html.TextBox("CONTACT_FAX")
                                </label>
                            </div>
                        </div>
                    </div>
                </section>


                <div class="row">
                    <div class="col-6">
                        <label class="col-4 control-label">收件日期 : </label>
                        <div class='input-group date'>
                            <input type='text' id='datetimepicker1' />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <label class="col-4 control-label">預計投標日期 : </label>
                        <div class='input-group date'>
                            <input type='text' id='datetimepicker2' />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </fieldset>
            <br />
        }
    </div>
</div>

<br /><br /><br />
