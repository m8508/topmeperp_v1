
@model IEnumerable<topmeperp.Models.ESTFunction>
<div class="container">
    <div class="row" style="padding-top:5px;">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>項次</th>
                    <th>估驗日期</th>
                    <th>編號</th>
                    <th>合約名稱</th>
                    <th>供應商名稱</th>
                    <th>估驗單狀態</th>
                    <th>選項連結</th>
                </tr>
            </thead>
            <tbody>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.NO</td>
                        <td>@item.CREATE_DATE</td>
                        <td><a href="/Estimation/SingleEST/@item.EST_FORM_ID" target="_blank">@item.EST_FORM_ID</a></td>
                        <td>@item.CONTRACT_NAME</td>
                        <td>@item.SUPPLIER_NAME</td>
                        @if (item.STATUS == 0)
                        {

                            <td><span style="color: red; font-size: 15px;">退件</span></td>

                        }
                        else if (item.STATUS == 10)
                        {
                            <td>草稿</td>
                        }
                        else if (item.STATUS == 20)
                        {
                            <td>已送審</td>
                        }
                        else if (item.STATUS == 30)
                        {
                            <td><span style="color: blue; font-size: 15px;">已核可</span></td>
                        }
                        else
                        {
                            <td><span style="color: red; font-size: 15px;">已結帳</span></td>
                        }
                        <td><a href='@("../../UploadFile/" + ViewBag.projectid + "/Estimation/" + item.EST_FORM_ID + ".xlsx")'>下載</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

