@model topmeperp.Models.CashFlowModel
@{
    ViewBag.Title = "收入明細";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}
<div class="container">
    <h2 class="text-center" style="padding-top:10px;">收入明細</h2>
</div>
<div class="col-md-1">
    <input type="button" class="btn btn-success" onclick="closewin();" value="關閉">
</div>

<div style="padding-top:50px;">
    <form id="formAccount" name="formAccount" action="UpdateAccountStatus" method="post">
        <table class="table">
            <tr>
                <th>
                   修改
                </th>
                <th>
                    No.
                </th>
                <th>
                    專案名稱/摘要說明
                </th>
                <th>
                    應收金額
                </th>
                <th>
                    實收金額
                </th>
                <th>
                    預計入帳日期
                </th>
                <th>
                    支票號碼
                </th>
                <th>
                    暫不入帳
                </th>
            </tr>

            @foreach (var item in Model.planAccount)
            {
                <tr>
                    <td>
                        <button type="button" class="btn btn-default btn-xs" onclick="getPlanAccountItem('@item.PLAN_ACCOUNT_ID')">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                    </td>
                    <td>@item.NO</td>
                    <td>@item.PROJECT_NAME</td>
                    <td>@String.Format("{0:$#,##0.#}", item.AMOUNT_PAYABLE)</td>
                    <td>@String.Format("{0:$#,##0.#}", item.AMOUNT_PAID)</td>
                    <td>@item.RECORDED_DATE</td>
                    <td>@item.CHECK_NO</td>
                    @if (item.STATUS != 10)
                    {
                        <td><span style="color: red; font-size: 15px;">是</span></td>
                    }
                    else
                    {
                        <td>否</td>
                    }
                </tr>
            }
        </table>
    </form>
</div>
<h3 class="text-left" style="padding-top:20px;">銀行借款/廠商還款 :</h3>
<table class="table table-bordered">
    <tr>
        <th>
            類型
        </th>
        <th>
            金額
        </th>
        <th>
            日期
        </th>
        <th>
            備註
        </th>
    </tr>

    @foreach (var item in Model.finLoanTranaction)
            {
        <tr>
            @if (item.IS_SUPPLIER == "Y" )
            {
                <td>廠商還款</td>
            }
            else
            {
                <td>銀行借款</td>

            }
            <td>@String.Format("{0:$#,##0.#}", item.AMOUNT)</td>
            @if (item.TRANSACTION_TYPE == -1)
            {
                <td>@string.Format("{0:yyyy/MM/dd}", @item.EVENT_DATE)</td>
            }
            else
            {
                <td>@string.Format("{0:yyyy/MM/dd}", @item.PAYBACK_DATE)</td>
            }
            <td>@item.REMARK</td>
        </tr>
    }
</table>

<!-- Modal :對話框-->
<div class="modal fade" id="planAcountItem" role="dialog">
    <div class="modal-dialog" id="planAcountItemDialog">
        <!-- Modal content-->
        @ViewBag.SearchResult
        @Html.Partial("_PlanAccountItem");
    </div>
</div>
<script type="text/javascript">
    function closewin() {
        window.open('', '_self', ''); window.close();
    }

    //由ID 取得資料填入表單
    function getPlanAccountItem(itemid) {
        //alert(userid);
        $.ajax({
            url: "/CashFlow/getPlanAccountItem",
            type: "GET",
            data: { itemid: itemid },
            dataType: "JSON",
            success: function (data) {
                $('#project_name').val(data.PROJECT_NAME);
                $('#plan_account_id').val(data.PLAN_ACCOUNT_ID);
                $('#contract_id').val(data.CONTRACT_ID);
                $('#type').val(data.ACCOUNT_TYPE);
                $('#isdebit').val(data.ISDEBIT);
                $('#create_id').val(data.CREATE_ID);
                $('#check_no').val(data.CHECK_NO);
                $('#account_form_id').val(data.ACCOUNT_FORM_ID);
                $('#amount_payable').val(data.RECORDED_AMOUNT_PAYABLE);
                $('#amount_paid').val(data.RECORDED_AMOUNT_PAID);
                $('#date').val(data.RECORDED_DATE);
                $('#project_id').val(data.PROJECT_ID);
                $('#unRecordedFlag').val(data.STATUS);
                $('#planAcountItem').modal('show'); // show bootstrap modal when complete loaded
                //$('.modal-title').text('編輯設定資料'); // Set title to Bootstrap modal title
            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert('Error get data from ajax');
            }
        });
    }

    //更新plan acount item
    $("#savePlanAccountItem").click(function () {
        var s = $('#formAccountItem').serialize();
        var URLs = "/CashFlow/updatePlanAccountItem";
        $.ajax({
            url: URLs,
            data: $('#formAccountItem').serialize(),
            type: "POST",
            dataType: 'text',
            success: function (msg) {
                alert(msg);
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(thrownError);
            }
        });
    });
</script>
