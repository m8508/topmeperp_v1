
@{
    ViewBag.Title = "公司營業費用查詢";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

<div class="jumbotron">
    <h3 style="height:20px;line-height:10px">@ViewBag.Title</h3>
    <form name="expSearch" id="expSearch" action="SearchEXP" method="Post" class="form-inline">
        <div class="row">
            <div class='col-md-6 form-group' style="padding-top:10px">
                <label for="occurred_date">發生年月 : </label>
                <input id="occurred_date" name="occurred_date" class="form-control" />
            </div>
            <div class='col-md-6 form-group' style="padding-top:10px">
                <label for="expid">費用單編號 :</label>
                <input id="expid" name="expid" type="text" value="" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class='col-md-6 form-group' style="padding-top:10px">
                <label for="subjectname">項目名稱 : </label>
                <input id="subjectname" name="subjectname" class="form-control" />
            </div>
            <div class="col-md-6 form-group" style="padding-top:10px">
                <input type="radio" value="15" id="status" name="status" checked/>已送審
                <input type="radio" value="20" id="status" name="status" />待主管簽核
                <input type="radio" value="40" id="status" name="status" />待最後核准
                <input id="Submit1" type="submit" class="btn btn-info" value="查詢" />
            </div>
        </div>
        <div class="row">
        </div>
            <div class="col-md-6">
                <div id="divProcessing">
                    <img src="~/Content/ajax-loader.gif">
                </div>
            </div>
</form>
</div>
<!--估驗單列表區域-->
<div class="container-fluid">
    @if (null != Model)
    {
        Html.RenderPartial("_ExpenseFormList");
    }

</div>

<script type="text/javascript">
    $(document).ready(function () {
        // Hide the "busy" Gif at load:
        $("#divProcessing").hide();
        // Attach click handler to the submit button:
        $('#Submit1').click(function () {
            $("#divProcessing").show();
        });

        $(function () {
            $('#occurred_date').datetimepicker({
                format: 'YYYY/M'
            });
        });
    })
</script>

