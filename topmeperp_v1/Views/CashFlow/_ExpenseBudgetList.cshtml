            </th>
            <th>
                <span style="color: blue; font-size: 15px;">
                    <input type="text" style="width:80px" name="janVTotal" id="janVTotal" value="" />
                </span>
            </th>
        </tr>
    </table>
</form>

<script>
    $(document).ready(function () {
        var total1 = 0;
        var sum1 = 0;
        var total3 = 0;
        var sum3 = 0;
        var total4 = 0;
        var sum4 = 0;
        $('table > tbody > tr').each(function () {
            var atm = 0;
            var atm3 = 0;
            var atm4 = 0;
            if ($.trim($(this).find("#janAtm").val()) != "") {
                atm = parseInt($.trim($(this).find("#janAtm").val()));
            }
            if ($.trim($(this).find("#marAtm").val()) != "") {
                atm3 = parseInt($.trim($(this).find("#marAtm").val()));
            }
            if ($.trim($(this).find("#aprAtm").val()) != "") {
                atm4 = parseInt($.trim($(this).find("#aprAtm").val()));
            }
            total1 = atm;
            total3 = atm3;
            total4 = atm4;

            sum1 += total1;
            sum3 += total3;
            sum4 += total4;
            
        });
        return $("#janVTotal").val(sum1), $("#marVTotal").val(sum3), $("#aprVTotal").val(sum4);
    });
    $(document).ready(function () {
        var total2 = 0;
        var sum2 = 0;
        $('table > tbody > tr').each(function () {
            var atm2 = 0;
            if ($.trim($(this).find("#febAtm").val()) != "") {
                atm2 = parseInt($.trim($(this).find("#febAtm").val()));
            }
            if ($.trim($(this).find("#febAtm").val()) != null) {
                total2 = atm2;
            }
            sum2 += total2;
        });
        return $("#febVTotal").val(sum2);
    });
</script>

