@model topmeperp.Models.CashFlowModel
@{
    ViewBag.Title = "財務收支報表";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}
<div class="container">
    <h2 class="text-center">財務收支報表</h2>
</div>
<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("PlanAccount", "CashFlow")'; ">修改帳款資料</button>
<input type="button" class="btn btn-success" onclick="history.back()" value="回上一頁">
<div style="padding-top:30px;">
    <table class="table">
        <tr>
            <th>
                日期
            </th>
            <th>
                現金流入
            </th>
            <th>
                現金流出
            </th>
            <th>
                合計
            </th>
            <th>
                累計
            </th>
        </tr>

        @foreach (var item in Model.finFlow)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DATE_CASHFLOW)
                </td>
                @if (item.AMOUNT_INFLOW != 0)
                {
                    <td>
                        <a href="/CashFlow/CashInFlowItem?id=@item.DATE_CASHFLOW" target="_blank">@String.Format("{0:$#,##0.#}", item.AMOUNT_INFLOW)</a>
                    </td>
                }
                else
                {
                    <td>
                        @String.Format("{0:$#,##0.#}", item.AMOUNT_INFLOW)
                    </td>
                }
                @if (item.AMOUNT_OUTFLOW != 0)
                {
                    <td>
                        <a href="/CashFlow/CashOutFlowItem?id=@item.DATE_CASHFLOW" target="_blank">@String.Format("{0:$#,##0.#}", item.AMOUNT_OUTFLOW)</a>
                    </td>
                }
                else
                {
                    <td>
                        @String.Format("{0:$#,##0.#}", item.AMOUNT_OUTFLOW)
                    </td>
                }
                @if (item.BALANCE >= 0)
                {
                    <td>
                        @String.Format("{0:$#,##0.#; ($#,##0.#);-}", item.BALANCE)
                    </td>
                }
                else
                {
                    <td>
                        <span style="font-weight:bold;color:crimson">
                            @String.Format("{0:$#,##0.#; ($#,##0.#);-}", item.BALANCE)
                        </span>
                    </td>
                }
                @if (item.RUNNING_TOTAL >= 0)
                {
                    <td>
                        @String.Format("{0:$#,##0.#; ($#,##0.#);-}", item.RUNNING_TOTAL)
                    </td>
                }
                else
                {
                    <td>
                        <span style="font-weight:bold;color:crimson">
                            @String.Format("{0:$#,##0.#; ($#,##0.#);-}", item.RUNNING_TOTAL)
                        </span>
                    </td>
                }
            </tr>
        }
    </table>
</div>
<!-- 專案執行之收支進度報表-->
<div style="padding-top:30px;">
    <h3 class="text-left">專案收支進度</h3>
    <table class="table table-bordered table-striped bg-info">
        <thead>
            <tr>
                <th style="width:200px;">
                    專案名稱
                </th>
                <th style="width:100px;">
                    合約金額
                </th>
                <th style="width:100px;">
                    直接成本
                </th>
                <th style="width:80px;">
                    工地費用
                </th>
                <th style="width:80px;">
                    界面維保費用
                </th>
                <th style="width:80px;">
                    業務與公司費用分擔
                </th>
                <th style="width:100px;">
                    累計實付
                </th>
                <th style="width:100px;">
                    累計實收
                </th>
                <th style="width:100px;">
                    業主未請款
                </th>
                <th style="width:100px;">
                    廠商未請款
                </th>
                <th style="width:70px;">
                    專案執行毛利
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.finProfile)
            {
                <tr>
                    <td>
                        @item.PROJECT_NAME
                    </td>
                    <td>
                        @String.Format("{0:$#,##0.#}", item.PLAN_REVENUE)
                    </td>
                    <td>
                        @String.Format("{0:$#,##0.#}", item.directCost)
                    </td>
                    <td>
                        @String.Format("{0:$#,##0.#}", item.SiteCost)
                    </td>
                    <td>
                        @String.Format("{0:$#,##0.#}", item.MACost)
                    </td>
                    <td>
                        @String.Format("{0:$#,##0.#}", item.ManagementCost)
                    </td>
                    <td>
                        @String.Format("{0:$#,##0.#}", item.AP)
                    </td>
                    <td>
                        @String.Format("{0:$#,##0.#}", item.AR)
                    </td>
                    <td>
                        @String.Format("{0:$#,##0.#}", item.uncollectedAR)
                    </td>
                    <td>
                        @String.Format("{0:$#,##0.#}", item.unpaidAP)
                    </td>
                    @if (item.planProfit >= 0)
                {
                        <td>
                            @String.Format("{0:$#,##0.#; ($#,##0.#);-}", item.planProfit)
                        </td>
                    }
                    else
                    {
                        <td>
                            <span style="font-weight:bold;color:crimson">
                                @String.Format("{0:$#,##0.#; ($#,##0.#);-}", item.planProfit)
                            </span>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <table class="table table-bordered">
        <tr class="bg-success">
            <th style="width:200px;">
                <span style="color: blue; font-size: 15px;">
                   <label>合計</label>
                </span>
            </th>
            <th style="width:100px;">
                @String.Format("{0:$#,##0.#}", @Model.totalFinProfile.PLAN_REVENUE)
            </th>
            <th style="width:100px;">
                @String.Format("{0:$#,##0.#}", @Model.totalFinProfile.directCost)
            </th>
            <th style="width:80px;">
                @String.Format("{0:$#,##0.#}", @Model.totalFinProfile.SiteCost)
            </th>
            <th style="width:8px;">
                @String.Format("{0:$#,##0.#}", @Model.totalFinProfile.MACost)
            </th>
            <th style="width:80px;">
                @String.Format("{0:$#,##0.#}", @Model.totalFinProfile.ManagementCost)
            </th>
            <th style="width:100px;">
                @String.Format("{0:$#,##0.#}", @Model.totalFinProfile.AP)
            </th>
            <th style="width:100px;">
                @String.Format("{0:$#,##0.#}", @Model.totalFinProfile.AR)
            </th>
            <th style="width:100px;">
                @String.Format("{0:$#,##0.#}", @Model.totalFinProfile.uncollectedAR)
            </th>
            <th style="width:100px;">
                @String.Format("{0:$#,##0.#}", @Model.totalFinProfile.unpaidAP)
            </th>
            @if (@Model.totalFinProfile.planProfit >= 0)
            {
                <th>
                    @String.Format("{0:$#,##0.#; ($#,##0.#);-}", @Model.totalFinProfile.planProfit)
                </th>
            }
            else
            {
                <th>
                    <span style="font-weight:bold;color:crimson">
                        @String.Format("{0:$#,##0.#; ($#,##0.#);-}", @Model.totalFinProfile.planProfit)
                    </span>
                </th>
            }
        </tr>
    </table>
</div>
