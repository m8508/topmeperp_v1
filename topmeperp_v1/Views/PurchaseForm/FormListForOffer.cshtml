@model IEnumerable<topmeperp.Models.purchasesummary>
<table class="table">
    <tr>
        <th>
            建立日期
        </th>
        <th>
            採購項目
        </th>
        <th>
           詢價單編號
        </th>
        <th>
            廠商名稱
        </th>
        <th>
            採購項目個數
        </th>
        <th>
            議價報價回覆個數
        </th>
        <th>
            功能區
        </th>


    </tr>

    @foreach (var item in Model)
    {
        if (item.PRICEROWS != null && item.PRICEROWS != 0)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CREATE_DATE, "LongDateTime")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FORM_NAME)
            </td>
            <td>
                <a href="/PurchaseForm/SinglePrjForm/@item.INQUIRY_FORM_ID" target="_blank">@item.INQUIRY_FORM_ID</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SUPPLIER_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TOTALROWS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PRICEROWS)
            </td>
            <td>
                <span style="color: crimson" >有議價比價資料</span>
            </td>
        </tr>
        }
        else
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CREATE_DATE, "LongDateTime")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FORM_NAME)
                </td>
                <td>
                    <a href="/PurchaseForm/SinglePrjForm/@item.INQUIRY_FORM_ID" target="_blank">@item.INQUIRY_FORM_ID</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SUPPLIER_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TOTALROWS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PRICEROWS)
                </td>
                <td>
                    無議價比價資料
                </td>
            </tr>
        }
    }
</table>


