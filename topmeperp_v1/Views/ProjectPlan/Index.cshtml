<!--條件區域-->
<div class="page-header">
    <form name="FormCompareProject" id="FormCompareProject" action="uploadFile" method="Post" enctype="multipart/form-data">
        <div class="row">
            <label class="col-md-3 control-label">專案編號: </label>
            <div class='col-md-9'>
                <input type="text" name="projectid" id="projectid" value="@ViewBag.projectId" />
            </div>
        </div>
        <div class="row">
            <label class="col-md-3 control-label">專案規劃(Project File): </label>
            <div class='col-md-9'>
                <input type="file" name="file" id="file" />
            </div>
        </div>
        <div class="row">
            <div class="" col-md-12">
                <input type="submit" value="上傳" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>
<!--樹狀圖區塊 範例-->
<div class="container" id="projecttask" style="margin-top:30px;">
    <div class="row">
        <div class="col-sm-4">
            <h2>Custom Icons</h2>
            <div id="treeview5" class=""></div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row" id="projectTask">
        @Html.Raw(ViewBag.htmlResult);
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        // Hide the "busy" Gif at load:
        $("#divProcessing").hide();
        // Attach click handler to the submit button:
        $('#btnQuery').click(function () {
            $("#divProcessing").show();
        });
    });
    function getComparisonData() {
        //Ajax 功能範例:置換部分網頁內容
        var URLs = "/ProjectCompare/getCompareData";
        $("#divProcessing").show();
        $.ajax({
            url: URLs,
            data: $('#FormCompareProject').serialize(),
            type: "POST",
            dataType: 'html',
            success: function (result) {
                $("#comparisonData").html(result);
                $("#divProcessing").hide();
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(thrownError);
                $("#divProcessing").hide();
            }
        });
    }
</script>
