@model topmeperp.Models.DailyReport
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>協成水電-施工日報</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="container">
        <div class="panel panel-default" style="text-align:center">
            <div class="panel-heading"><h5>協成水電工程事業有限公司-每日出工日報表-機電功能</h5></div>
            <div class="panel-body">
                <table class="table-bordered" style="width:100%">
                    <tr><th>工程名稱</th><th colspan="4">@Model.project.PROJECT_NAME</th><th>報告日期</th><th colspan="2">@ViewBag.RptDate</th></tr>
                    <tr><th>工程地點</th><th colspan="3">@Model.project.LOCATION</th><th>業主名稱</th><th>@Model.project.OWNER_NAME</th><th>專案編號</th><td>@Model.project.PROJECT_ID</td></tr>
                    <tr><th>施工內容</th><th colspan="7">@ViewBag.taskName</th></tr>
                    <!--施作的標單內容-->
                    <tr><td>編號</td><td>項次</td><td colspan="2">名稱</td><td>圖算數量</td><td>本日施作數量</td><td>累計數量</td><td>完成比例</td></tr>

                    @for (int idx = 0; idx < Model.lstDailyRptItem4Show.Count; idx++)
                    {
                        <tr>
                            <td>@Model.lstDailyRptItem4Show[idx].PROJECT_ITEM_ID</td>
                            <td>
                                @Model.lstDailyRptItem4Show[idx].ITEM_ID
                            </td>
                            <td style="text-align:left" colspan="2">@Model.lstDailyRptItem4Show[idx].ITEM_DESC</td>
                            <td>@Model.lstDailyRptItem4Show[idx].QTY</td>
                            <td>
                                @string.Format("{0:0}", Model.lstDailyRptItem4Show[idx].FINISH_QTY)
                            </td>
                            <td>@(Model.lstDailyRptItem4Show[idx].ACCUMULATE_QTY + Model.lstDailyRptItem4Show[idx].FINISH_QTY)</td>
                            <td>100%</td>
                        </tr>
                    }

                    <!--施作的標單內容-->
                    <tr><td colspan="4">出工數量</td><td colspan="4">機具數量</td></tr>
                    <tr><td colspan="2">名稱</td><td>本日數量</td><td>累積數量</td><td colspan="2">名稱</td><td>本日數量</td><td>累積數量</td></tr>
                    @for (int idx = 0; idx < Model.lstDailyRptWokerType4Show.Count; idx++)
                    {
                        <tr>
                            <!--工-->
                            <td colspan="2">@Model.lstDailyRptWokerType4Show[idx].VALUE_FIELD</td>
                            <td>
                                @string.Format("{0:0}", Model.lstDailyRptWokerType4Show[idx].WORKER_QTY)
                            </td>
                            <td>
                                @string.Format("{0:0}", Model.lstDailyRptWokerType4Show[idx].LAST_QTY + Model.lstDailyRptWokerType4Show[idx].WORKER_QTY)
                            </td>
                            @if (idx < Model.lstDailyRptMachine4Show.Count - 1)
                            {
                                <td colspan="2">@Model.lstDailyRptMachine4Show[idx].VALUE_FIELD</td>
                                <td>
                                    @string.Format("{0:0}", Model.lstDailyRptMachine4Show[idx].WORKER_QTY)
                                </td>
                                <td>
                                    @string.Format("{0:0}", Model.lstDailyRptMachine4Show[idx].LAST_QTY + Model.lstDailyRptMachine4Show[idx].WORKER_QTY)
                                </td>
                            }
                            else
                            {
                                <td colspan="2"></td>
                                <td></td>
                                <td></td>
                            }
                        </tr>

                    }
                    <tr><td colspan="2" rowspan="@Model.lstRptNote.Count">本日重要記事</td><td colspan="6" style="text-align:left">@Model.lstRptNote[0].REMARK</td></tr>
                    @for (int idx = 1; idx < Model.lstRptNote.Count; idx++)
                    {
                        <tr>
                            <td colspan="6" style="text-align:left">
                                @Model.lstRptNote[idx].REMARK
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</body>
</html>
